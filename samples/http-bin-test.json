{
    "testName": "HTTP-Bin Test HTTP Methods",
    "variables": [
        {
            "key": "server",
            "type": "string",
            "usage": "info",
            "value": ""
        },
        {
            "key": "homePageContent",
            "type": "string",
            "usage": "info",
            "value": ""
        },
        {
            "key": "authenticated",
            "type": "string",
            "usage": "info",
            "value": ""
        }
    ],
    "baseURL": "https://httpbin.org",
    "config": {},
    "steps": [
        {
            "stepName": "Home page",
            "request": {
                "method": "get",
                "url": "/"
            },
            "extractors": [
                {
                    "type": "header",
                    "expression": "content-type",
                    "variable": "homePageContent"
                }
            ]
        },
        {
            "stepName": "Get Method",
            "request": {
                "method": "get",
                "url": "/get"
            },
            "extractors": [
                {
                    "type": "header",
                    "expression": "server",
                    "variable": "server"
                }
            ]
        },
        {
            "stepName": "Basic Auth Failed",
            "expectedStatus": 401,
            "request": {
                "method": "get",
                "url": "/basic-auth/foo/error",
                "auth": {
                    "username": "foo",
                    "password": "bar"
                }
            },
            "extractors": []
        },
        {
            "stepName": "Basic Auth",
            "request": {
                "method": "get",
                "url": "/basic-auth/foo/bar",
                "auth": {
                    "username": "foo",
                    "password": "bar"
                }
            },
            "extractors": [
                {
                    "type": "jsonpath",
                    "expression": "$.authenticated",
                    "variable": "authenticated"
                }
            ]
        },
       
        {
            "stepName": "Bearer Auth",
            "request": {
                "method": "get",
                "url": "/bearer",
                "headers": {
                    "Authorization": "Bearer abcd1234"
                }
            },
            "extractors": [
                {
                    "type": "jsonpath",
                    "expression": "$.authenticated",
                    "variable": "authenticated"
                }
            ]
        }
    ]
}