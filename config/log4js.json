{
    "appenders": {

      "app": {
        "type": "file",
        "filename": "log/app.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "errorFile": {
        "type": "file",
        "filename": "log/errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      },
      "out": 
      { 
        "type": "stdout"
      } 

    },
    "categories": {
      "default": { "appenders": [ "app", "errors","out" ], "level": "DEBUG" }
    }
  }
