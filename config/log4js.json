{
    "appenders": {
      "access": {
        "type": "dateFile",
        "filename": "logs/url-xi-access.log",
        "pattern": "-yyyy-MM-dd",
        "category": "http"
      },
      "app": {
        "type": "file",
        "filename": "logs/url-xi-app.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "errorFile": {
        "type": "file",
        "filename": "logs/url-xi-errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      },
      "out": 
      { 
        "type": "stdout"
      } 

    },
    "categories": {
      "default": { "appenders": [ "app", "errors","out" ], "level": "DEBUG" },
      "http": { "appenders": [ "access"], "level": "DEBUG" }
    }
  }
